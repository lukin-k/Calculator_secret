<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="end"
        android:background="@color/colorDarkBlue">
        <HorizontalScrollView
            android:id="@+id/HorizontalScrollView_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:scrollbars="none">
            <TextView
                android:id="@+id/TextView_input"
                android:textSize="30sp"
                android:textColor="@color/colorWhite"
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
        </HorizontalScrollView>
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">
            <TextView
                android:id="@+id/TextView_output"
                android:textSize="50sp"
                android:textColor="@color/colorWhite"
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
        </HorizontalScrollView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorLightBlue"
        android:orientation="horizontal">
        <Button
            android:id="@+id/Button_plus"
            android:text="+"
            android:textSize="20sp"
            android:background="@color/colorLightBlue"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick_plus">
        </Button>
        <Button
            android:id="@+id/Button_minus"
            android:text="-"
            android:textSize="20sp"
            android:background="@color/colorLightBlue"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick_minus">
        </Button>
        <Button
            android:id="@+id/Button_multiply"
            android:text="*"
            android:textSize="20sp"
            android:background="@color/colorLightBlue"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick_multiply">
        </Button>
        <Button
            android:id="@+id/Button_divide"
            android:text="/"
            android:textSize="20sp"
            android:background="@color/colorLightBlue"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick_divide">
        </Button>
        <Button
            android:id="@+id/Button_equally"
            android:text="="
            android:textSize="20sp"
            android:background="@color/colorLightBlue"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick_equally">
        </Button>
    </LinearLayout>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:columnCount="3"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <Button
            android:id="@+id/Button_open_bracket"
            android:text="("
            android:textSize="20sp"
            android:background="@color/colorWhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick_open_bracket">
        </Button>
        <Button
            android:id="@+id/Button_close_bracket"
            android:text=")"
            android:textSize="20sp"
            android:background="@color/colorWhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick_close_bracket">
        </Button>
        <Button
            android:id="@+id/Button_del"
            android:text="Del."
            android:textSize="20sp"
            android:background="@color/colorWhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick_del">
        </Button>
        <Button
            android:id="@+id/Button_7"
            android:text="7"
            android:textSize="20sp"
            android:background="@color/colorWhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick_7">
        </Button>
        <Button
            android:id="@+id/Button_8"
            android:text="8"
            android:textSize="20sp"
            android:background="@color/colorWhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick_8">
        </Button>
        <Button
            android:id="@+id/Button_9"
            android:text="9"
            android:textSize="20sp"
            android:background="@color/colorWhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick_9">
        </Button>
        <Button
            android:id="@+id/Button_4"
            android:text="4"
            android:textSize="20sp"
            android:background="@color/colorWhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick_4">
        </Button>
        <Button
            android:id="@+id/Button_5"
            android:text="5"
            android:textSize="20sp"
            android:background="@color/colorWhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick_5">
        </Button>
        <Button
            android:id="@+id/Button_6"
            android:text="6"
            android:textSize="20sp"
            android:background="@color/colorWhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick_6">
        </Button>
        <Button
            android:id="@+id/Button_1"
            android:text="1"
            android:textSize="20sp"
            android:background="@color/colorWhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick_1">
        </Button>
        <Button
            android:id="@+id/Button_2"
            android:text="2"
            android:textSize="20sp"
            android:background="@color/colorWhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick_2">
        </Button>
        <Button
            android:id="@+id/Button_3"
            android:text="3"
            android:textSize="20sp"
            android:background="@color/colorWhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick_3">
        </Button>
        <Button
            android:id="@+id/Button_C"
            android:text="C"
            android:textSize="20sp"
            android:background="@color/colorWhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick_C">
        </Button>
        <Button
            android:id="@+id/Button_0"
            android:text="0"
            android:textSize="20sp"
            android:background="@color/colorWhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick_0">
        </Button>
        <Button
            android:id="@+id/Button_dot"
            android:text="."
            android:textSize="20sp"
            android:background="@color/colorWhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick_dot">
        </Button>
    </GridLayout>


</LinearLayout>